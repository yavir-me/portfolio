vendor(prop, args)
	-webkit-{prop} args
	   -moz-{prop} args
	    -ms-{prop} args
	     -o-{prop} args
	        {prop} args
$own-blue = #63C3E2
$own-red = #E4593F
$own-green = #71CE6C

@font-face
	font-family 'GtThin'
	font-style normal
	src url('/fonts/GTWalsheimThin.eot')
	src url('/fonts/GTWalsheimThin.eot?#iefix') format('embedded-opentype'),url('/fonts/GTWalsheimThin.woff') format('woff'),url('/fonts/GTWalsheimThin.ttf') format('truetype'),url('/fonts/GTWalsheimThin.otf') format('otf')

@font-face
	font-family 'GtRegular'
	font-style normal
	src url('/fonts/GTWalsheimRegular.eot')
	src url('/fonts/GTWalsheimRegular.eot?#iefix') format('embedded-opentype'),url('/fonts/GTWalsheimRegular.woff') format('woff'),url('/fonts/GTWalsheimRegular.ttf') format('truetype'),url('/fonts/GTWalsheimRegular.otf') format('otf')

@font-face
	font-family 'GtBold'
	font-style normal
	src url('/fonts/GTWalsheimBold.eot')
	src url('/fonts/GTWalsheimBold.eot?#iefix') format('embedded-opentype'),url('/fonts/GTWalsheimBold.woff') format('woff'),url('/fonts/GTWalsheimBold.ttf') format('truetype'),url('/fonts/GTWalsheimBold.otf') format('otf')

body 
	font 18px GtThin!important
	color white!important
	height 1200px!important
	background url('/images/bg.png')

h3
	color $own-green!important
	text-align center
	font 30px GtRegular!important

h3.header:nth-child(1)
	margin-top 42px

h3.header
	margin-bottom 30px
	width 100%

hr
	border-top 2px dashed #5F5F5F!important

.navbar
	background url('/images/bg.png')
	font 18px GtThin!important
	color white!important
	min-height 42px!important
	height 42px!important

.navbar-default .navbar-nav .active a
	background transparent!important
	color $own-red!important
	font-size 20px

.navbar-default .navbar-nav>li>a
	color white!important

.navbar-nav>li
	height 42px!important

.navbar-default
	border-color $own-red!important

.navbar-header
	margin-left 5%!important

.navbar-header a:hover .cursor-span
	opacity 0!important

.navbar-brand
	color white!important
	font 20px 'GtRegular'
	height 42px!important

.cursor-span
	position absolute
	font-weight 100%
	font-size 30px!important
	text-shadow none
	-webkit-animation 1s blink step-end infinite
	-moz-animation 1s blink step-end infinite
	-ms-animation 1s blink step-end infinite
	-o-animation 1s blink step-end infinite
	animation 1s blink step-end infinite

@keyframes 'blink'{
	from, to {
		color transparent
	}
	50% {
		color $own-red
	}
}

.capital-character
	color $own-red

.tagline
	float right
	margin -8px 0 0 5px
	font-size 12px
	text-shadow none
	color #E8E8E8
.navbar-right
	margin-right 20%!important;

.navbar-nav li a
	color white
	-o-transition .15s
	-ms-transition .15s
	-moz-transition .15s
	-webkit-transition .15s
	-webkit-transition-timing-function ease-in-out
	transition-timing-function ease-in-out

.navbar-nav li a:hover
	color $own-red!important
	font-size 20px

// stack block
#stack
	margin-top 0px

.stack-img
	cursor pointer
	position relative
	border-radius 2px
	overflow hidden
	padding 0!important
	transition .15s
	transition-timing-function ease-in-out


.stack-img::after
	// background repeating-linear-gradient(45deg, rgba(0,0,0,0.2) 4px, rgba(0,0,0,0.2) 4px, transparent 12px, transparent 12px), repeating-linear-gradient(-45deg, rgba(0,0,0,0.5) 4px, rgba(0,0,0,0.5) 4px, transparent 12px, transparent 12px)
	background url('/images/bg.png')
	opacity .4
	transition .15s
	transition-timing-function ease-in-out
	content ''
	width 100%
	height 100%
	position absolute
	// display block
	top 0
	left 0

.stack-img:hover::after
	opacity 0

.stack-img:hover
	box-shadow 0 0 15px #333

.node-desc li
.jade-desc li
	line-height 40px
	list-style-type circle

.jade-desc
	float right

.node-desc li span
.jade-desc li span
	color $own-blue
	font-family 'GtRegular'

.caption h3
	margin -55px 0 0 10px
	color white
	text-shadow 1px 1px 5px #000
	
//portfolio
#portfolio h3:not(.header)
	color white!important
	font-size 18px!important
	text-align left

.sketch
	margin-bottom 40px

.sketch .thumbnail
	position relative
	cursor pointer
	display block
	border none!important

.sketch .thumbnail::after
	content 'Project name'
	font 18px GtRegular
	color black
	transition .2s
	transition-timing-function ease-in-out

.sketch .thumbnail:hover::after
	color #757575

//about
#about
	margin-top -20px

#about h3:not(.header)
	color $own-red!important
.ava-img
	max-height 300px
	max-width 300px
	border 3px solid rgba($own-red, 1)

#about p
	margin 0 0 30px 0!important

.cv-button
	background url('/images/bg.png')
	width 140px
	height 50px
	font 20px GtThin
	color $own-blue
	border 2px solid $own-blue
	border-radius 20px
	outline none

.cv-button:hover
	background $own-green!important
	color white!important
	font-size 21px!important
	border 2px solid $own-green!important
	-o-transition .15s
	-ms-transition .15s
	-moz-transition .15s
	-webkit-transition .15s
	-webkit-transition-timing-function ease-in-out
	transition-timing-function ease-in-out

.footer
	width 100%
	height 60px
	color white
	background #545454
	position relative
	margin 20px auto 0
	text-align center
	font 16px GtRegular

.footer::after
	position absolute
	width 100%
	height 60px
	background url('/images/bg.png')!important
	opacity 1